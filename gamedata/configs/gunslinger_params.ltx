;--------------------------------------------------------------Dynamic DOF:-----------------------------

;стандартные параметры дофа в прицеливании (переопределяются параметрами в худовой секции)
default_zoom_dof_near = 0.5
default_zoom_dof_focus = 0.8
default_zoom_dof_far = 10000

;стандартные параметры дофа действий (переопределяются параметрами в худовой секции)
